<UserControl x:Class="PatientDialogue"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EyeChat"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ComboBox x:Name="ComboBoxOption1" 
                  ItemsSource="{Binding Options1}"
                  SelectedItem="{Binding SelectedOption1}" />
        <ComboBox x:Name="ComboBoxOption2" 
                  ItemsSource="{Binding Options2}"
                  SelectedItem="{Binding SelectedOption2}" />
    </Grid>
</UserControl>
